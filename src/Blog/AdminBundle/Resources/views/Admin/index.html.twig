{% extends "AdminBundle::layout.html.twig" %}
{% block title %}Dashboard{% endblock title %}
{% block container -%}
    <h1>Blogs</h1>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Content</th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td style="width: 30%;">{{ entity.title }}</td>
                <td>{{ entity.body | truncate(70) }}</td>
                <td>
                    <ul class="list-inline text-center">
                        <li>
                            <a href="{{ path('blog_admin_admin_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blog_admin_admin_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                        <li><a href="{{ path('blog_admin_admin_delete',{'id': entity.id }) }}">Delete</a></li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
