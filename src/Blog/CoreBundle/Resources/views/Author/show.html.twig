{% extends "CoreBundle::layout.html.twig" %}

{% block header %}
    <header class="intro-header post-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <span class="meta">All posts by</span>

                        <h1>{{ author.name }}</h1>

                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block mainContainer %}
    {% for post in posts %}
        {{ include('CoreBundle:Post:_post.html.twig',{post: post }) }}
    {% endfor %}
{% endblock %}