<div class="post-preview">
    <h2 class="post-title">
        {{ post.title }}
    </h2>

    <h3 class="post-subtitle">
        {{ post.body | truncate(200) }} &#8212; <a class="read-more" href="#">{{ 'read.more' | trans }} &raquo;</a>
    </h3>

    <p class="post-meta">Posted by <a href="#">{{ post.author.name }}</a> on {{ post.createdAt | date }} </p>
</div>
<hr>