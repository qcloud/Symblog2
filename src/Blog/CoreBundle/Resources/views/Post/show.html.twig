{% extends "CoreBundle::layout.html.twig" %}

{% block header %}
    <header class="intro-header post-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ post.title }}</h1>
                        <span class="meta">Posted by <a
                                    href="{{ path('blog_core_author_show',{slug: post.author.slug}) }}"><strong>{{ post.author.name }}</strong>
                            </a> on <strong>{{ post.createdAt | date('m-d-Y') }}</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block mainContainer %}
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <p>{{ post.body | nl2br }}</p>
                </div>
            </div>
        </div>
    </article>
{% endblock %}