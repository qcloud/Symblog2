{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container" style="margin-top: 40px;">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Register</h3>
                    </div>
                    <div class="panel-body">
                        <header class="panel-heading bg bg-primary text-center">
                            Sign up
                        </header>
                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }}
                              method="POST"
                              class="panel-body">
                            <div class="form-group">
                                <label class="control-label">Display name</label>
                                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'eg. Your name' }}
                                ) }}
                            </div>
                            <div class="form-group">
                                <label class="control-label">Your email address</label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'test@example.com' }}
                                ) }}
                            </div>
                            {#<div class="form-group">#}
                            {#<label class="control-label">Type a password</label>#}
                            {#{{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password', 'id': 'inputPassword'  }}) }}#}
                            {#</div>#}
                            <label class="control-label">Type a password</label>
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password', 'id': 'inputPassword' }}
                            ) }}
                            <br/>
                            <label class="control-label">Confirm password</label>
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm Password', 'id': 'inputPassword' }}
                            ) }}


                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Agree the <a href="#">terms and policy</a>
                                </label>
                            </div>
                            {{ form_widget(form) }}
                            <button type="submit" class="btn btn-info">{{ 'registration.submit'|trans }}</button>
                            <div class="line line-dashed"></div>
                            <p class="text-muted text-center">
                                <small>Already have an account?</small>
                            </p>
                            <a href="/login" class="btn btn-white btn-block">Sign in</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}